                                    </Border>
                                    <Ellipse Grid.Row="0"
                                             Grid.Column="2"
                                             Width="40"
                                             Height="40"
                                             HorizontalAlignment="Center"
                                             Fill="{ThemeResource AppAccentBrush}" />
