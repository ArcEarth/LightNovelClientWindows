        <StackPanel x:Name="LoadingIndicator"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Visibility="Collapsed">
            <ProgressBar HorizontalAlignment="Stretch" IsIndeterminate="True" />
            <TextBlock HorizontalAlignment="Center"
                       FontSize="{ThemeResource AppFontSizeSmall}"
                       FontWeight="SemiBold"
                       Text="Loading..." />
        </StackPanel>

    </Grid>
