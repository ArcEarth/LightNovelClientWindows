                                            ContentTemplate="{TemplateBinding HeaderTemplate}"
                                            FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                            FontSize="{StaticResource HubSectionHeaderFontSize}"
                                            FontWeight="SemiBold"
                                            Visibility="Collapsed">
