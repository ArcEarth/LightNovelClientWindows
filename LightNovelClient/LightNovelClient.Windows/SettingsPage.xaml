<SettingsFlyout x:Class="LightNovel.SettingsPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="using:LightNovel"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                Title="Options"
                DataContext="{Binding ViewModel,
                                      RelativeSource={RelativeSource Mode=Self}}"
                Background="{ThemeResource AppBackgroundBrush}"
                HeaderBackground="{ThemeResource AppAccentBrushSemiLight}"
                HeaderForeground="{ThemeResource AppBackgroundBrush}"
                Padding="40,20,30,20"
                d:DesignWidth="346"
                mc:Ignorable="d">

    <local:SettingSection/>
</SettingsFlyout>
