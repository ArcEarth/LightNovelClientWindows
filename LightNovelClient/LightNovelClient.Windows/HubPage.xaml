                                             FontWeight="SemiBold"
                                             Foreground="{ThemeResource AppAccentBrush}"
                                             NavigateUri="{StaticResource StoreReviewLink}" />
                            <TextBlock x:Uid="ProjectLabel"
                                       Margin="0,5,0,0"
