                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button"
                    AutomationProperties.Name="Back"
                    BorderBrush="{StaticResource AppBackgroundBrush}"
                    BorderThickness="2"
                    Command="{Binding NavigationHelper.GoBackCommand,
                                      ElementName=pageRoot}"
                    Foreground="{StaticResource AppBackgroundBrush}"
                    Style="{StaticResource NavigationBackButtonNormalStyle}" />
            <ScrollViewer Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Style="{ThemeResource HorizontalScrollViewerStyle}">
                <TextBlock x:Name="pageTitle"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource AppBackgroundBrush}"
                           IsHitTestVisible="false"
                           Language="zh-CN"
                           Style="{ThemeResource AppTextTitle1Style}"
                           Text="{Binding Header}"
                           TextTrimming="None"
                           TextWrapping="NoWrap" />
            </ScrollViewer>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBox MinWidth="40"
                         Margin="0,0,0,10"
                         VerticalAlignment="Bottom"
                         Background="{ThemeResource AppAccentBrush}"
                         BorderBrush="Transparent"
                         FontSize="{ThemeResource AppFontSizeLarge}"
                         Foreground="{ThemeResource AppAccentBrushLight}"
                         KeyDown="PageBox_KeyDown"
                         Text="{Binding Path=PageNo,
                                        Converter={StaticResource PlusConverter},
                                        ConverterParameter=1,
                                        Mode=TwoWay}"
                         TextAlignment="Center" />
                <TextBlock Margin="0,0,0,10"
                           VerticalAlignment="Bottom"
                           FontSize="{ThemeResource AppFontSizeExtraExtraLarge}"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource AppBackgroundBrush}"
                           Text="{Binding PagesCount}"
                           TextAlignment="Center" />
            </StackPanel>
            <!--  <AppBarSeparator Grid.Column="3" VerticalAlignment="Center" Foreground="{ThemeResource AppBackgroundBrush}" HorizontalAlignment="Center" Padding="0"/>  -->
            <AppBarToggleButton x:Uid="IndexButton"
                                x:Name="IndexButton"
                                Grid.Column="4"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="{StaticResource SemiTransparentBlackBrush10}"
                                BorderBrush="Transparent"
                                Click="IndexButton_Click"
                                Foreground="{StaticResource AppBackgroundBrush}"
                                IsChecked="{Binding IsIndexPanelOpen,
                                                    ElementName=pageRoot,
                                                    Mode=OneWay}"
                                ToolTipService.ToolTip="Open/Close the index panel">
                <Viewbox Margin="7">
                    <!--
                        <Canvas Width="76" Height="76">
                        <Path Width="38" Height="30" Canvas.Left="19" Canvas.Top="23" Stretch="Fill" Fill="{ThemeResource AppBackgroundBrush}" Data="F1 M 19,23L 27,23L 27,31L 19,31L 19,23 Z M 19,34L 27,34L 27,42L 19,42L 19,34 Z M 31,23L 57,23L 57,31L 31,31L 31,23 Z M 19,45L 27,45L 27,53L 19,53L 19,45 Z M 31,34L 57,34L 57,42L 31,42L 31,34 Z M 31,45L 57,45L 57,53L 31,53L 31,45 Z "/>
                        </Canvas>
                    -->
                    <SymbolIcon Symbol="List" />
                </Viewbox>
            </AppBarToggleButton>
            <!--  <AppBarToggleButton Grid.Column="3" Icon="Library" Label="Index" Foreground="{ThemeResource AppBackgroundBrush}" BorderBrush="{ThemeResource TransparentBrush}" Background="{StaticResource AppProgressBarBackgroundBrush}" IsCompact="True" Width="60" Height="60"/>  -->


        </Grid>

        <Grid x:Name="IndexRegion"
              Grid.Row="1"
              Grid.Column="0"
              Width="640"
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RenderTransform>
                <CompositeTransform TranslateX="-640" />
            </Grid.RenderTransform>
            <Grid x:Name="VolumeListMeanu"
                  Grid.Column="0"
                  Background="{ThemeResource AppAccentBrushLight}">
                <ListView x:Name="VolumeListView"
                          AutomationProperties.AutomationId="ItemsListView"
                          AutomationProperties.Name="Items"
                          Background="{ThemeResource AppAccentBrushLight}"
                          IsItemClickEnabled="True"
                          ItemClick="VolumeListView_ItemClick"
                          ItemsSource="{Binding Source={StaticResource VolumesViewSource}}"
                          Padding="10,20,0,20"
                          TabIndex="1"
                          extention:ListViewExtensions.ItemToBringIntoView="{Binding SelectedItem,
                                                                                     RelativeSource={RelativeSource Self}}">
                    <ListView.RenderTransform>
                        <CompositeTransform TranslateX="0.0" />
                    </ListView.RenderTransform>
                    <ListView.Transitions>
                        <TransitionCollection>
                            <ContentThemeTransition />
                        </TransitionCollection>
                    </ListView.Transitions>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="100" Margin="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border Grid.RowSpan="2"
                                        Width="80"
                                        Margin="0,0,0,0"
                                        Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}">
